Write-Host "Note: Figure out a way to pass the CID as a variable from the plan file"
Start-Process "{{pkg.path}}\crowdstrike_windows_setup.exe" -Wait -ArgumentList "/install /quiet CID=E3264501FB484452B49CBA0F1BFBF595-1F"
Write-Host "Installation Complete"